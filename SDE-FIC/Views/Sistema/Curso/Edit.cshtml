@model SDE_FIC.Models.Curso

@{
    ViewBag.Title = "Curso";
    Layout = "~/Views/Shared/_Layout_Sistema.cshtml";
}


<section class="content-header">
    <h1>
        Cadastro de @{@ViewBag.Title}s
        <small>Editar Curso</small>
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="pull-right">
                <a href="~/Curso" class="link-black"><i class="fa fa-close"></i></a>
            </div>
        </div>

        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdCurso)

                <div class="form-group">
                    <label>Curso</label>

                    @Html.TextBoxFor(model => model.CursoNome, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CursoNome)
                </div>


                <div class="form-group">
                    <label>Descrição</label>

                    @Html.TextAreaFor(model => model.Descricao, new { @Rows = "3", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descricao)
                </div>

                <div class="form-group">
                    <label>Carga Horária</label>

                    @Html.TextBoxFor(model => model.CargaHoraria, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CargaHoraria)
                </div>


                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" id="btnSubmit" />
                    <a href="/Usuario/Create" class="btn btn-default pull-right">Limpar</a>
                </div>

            }

        </div>

    </div>


</section>
