@model SDE_FIC.Models.UnidadeCurricular

@{
    ViewBag.Title = "Unidade Curricular";
    Layout = "~/Views/Shared/_Layout_Sistema.cshtml";
}



<section class="content-header">
    <h1>
        Cadastro de @{@ViewBag.Title}
        <small>Nova @{@ViewBag.Title}</small>
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="pull-right">
                <a href="~/UnidadeCurricular" class="link-black"><i class="fa fa-close"></i></a>
            </div>
        </div>

        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    <label>Unidade Curricular</label>
 
                    @Html.TextBoxFor(model => model.Descricao, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descricao)
                </div>

                <div class="form-group">
                    <label>Sigla</label>

                    @Html.TextBoxFor(model => model.Sigla, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sigla)
                </div>

                <div class="form-group">
                    <label>Carga Horária (h)</label>

                    @Html.TextBoxFor(model => model.CargaHoraria, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CargaHoraria)
                </div>

                <div class="form-group">
                    <label>Curso</label>

                    @Html.DropDownListFor(model => Model.Curso.IdCurso, ViewBag.curso_idcurso as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Curso.IdCurso)
                </div>

                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" id="btnSubmit" />
                    <a href="/UnidadeCurricular/Create" class="btn btn-default pull-right">Limpar</a>
                </div>

            }

        </div>

    </div>
    
</section>
