@model SDE_FIC.Models.Funcionario

@{
    ViewBag.Title = "Funcionário";
    Layout = "~/Views/Shared/_Layout_Sistema.cshtml";
}


<section class="content-header">
    <h1>
        Cadastro de @{@ViewBag.Title}s
        <small>Editar Funcionário</small>
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="pull-right">
                <a href="~/Funcionario" class="link-black"><i class="fa fa-close"></i></a>
            </div>
        </div>

        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(Model => Model.IdFuncionario)

                <div class="form-group">
                    <label>Nome Completo</label>

                    @Html.TextBoxFor(model => model.NomeCompleto, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NomeCompleto)
                </div>

                <div class="form-group">
                    <label>E-mail</label>

                    @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="form-group">
                    <label>Celular</label>

                    @Html.TextBoxFor(model => model.TelefoneCelular, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TelefoneCelular)
                </div>

                <div class="form-group">
                    <label>Telefone Residencial</label>

                    @Html.TextBoxFor(model => model.TelefoneResidencial, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TelefoneResidencial)
                </div>

                <div class="form-group">
                    <label>Associar Usuário</label>

                    @Html.DropDownListFor(model => Model.IdUsuario, ViewBag.usuario_idusuario as SelectList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdUsuario)
                </div>

                <div class="form-group">
                    <label>Especialidade</label>

                    @Html.TextBoxFor(model => model.Especialidade, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Especialidade)
                </div>

                <div class="form-group">
                    <label>Observação</label>

                    @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control", @Rows = "4" })
                    @Html.ValidationMessageFor(model => model.Observacao)
                </div>

                <div class="box-footer">
                    <input type="submit" value="Salvar" class="btn btn-success" id="btnSubmit" />
                    <a href="/Usuario/Create" class="btn btn-default pull-right">Limpar</a>
                </div>

            }

        </div>

    </div>

    </div>

</section>