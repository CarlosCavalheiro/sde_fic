@model SDE_FIC.Models.Sugestoes
@{
    ViewBag.Title = "Sugestões";
    Layout = "~/Views/Shared/_Layout_Sistema.cshtml";
}


<section class="content-header">
    <h1>
        Cadastro de @{@ViewBag.Title}
        <small>Nova @{@ViewBag.Title}</small>
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="pull-right">
                <a href="~/Sugestoes" class="link-black"><i class="fa fa-close"></i></a>
            </div>
        </div>

        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdSugestao)

                <div class="row">
                    <div class="form-group col-md-2">
                        <label>Tipo</label>
                        @Html.DropDownListFor(model => model.Tipo, new SelectList(
                              new List<Object>{
                                                new { value =  "Correção" , text =  "Correção"  },
                                                new { value =  "Nova Função" , text =  "Nova Função"  },
                                                new { value =  "Erro" , text =  "Erro"  },
                                              },"value","text"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tipo)
                    </div>
                    <div class="form-group col-md-6">
                        <label>Titulo/Local</label>
                        @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>

                    @Html.HiddenFor(model => Model.IdUsuario, new { Value = Model.Usuario.IdUsuario, @class = "form-control" })

                    <div class="form-group col-md-2">
                        <label>Status</label>
                        @Html.DropDownListFor(model => model.Status, new SelectList(
                                     new List<Object>{
                                                       new { value =  "Aberto" , text =  "Aberto"  },
                                                       new { value =  "Iniciado" , text =  "Iniciado"  },
                                                       new { value =  "Finalizado" , text =  "Finalizado"  },
                                                     },"value","text"), new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.Status)
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-10">
                        <label>Descrição</label>
                        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descricao)
                    </div>
                </div>

                <div class="box-footer col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" id="btnSubmit" />
                    <a href="/Sugestoes/Create" class="btn btn-default pull-right">Limpar</a>
                </div>

            }

        </div>

    </div>

</section>


