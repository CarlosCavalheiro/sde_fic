@model SDE_FIC.Models.Usuario

@{
    ViewBag.Title = "SDEFic | Acesso Restrito";
    Layout = null;
}

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@ViewBag.Title </title>


        <link rel="shortcut icon" href="../../img/ico_dq.png">
        <link rel="icon" href="../../Content/img/sde_topo.png" sizes="120x120">

        <!-- Tell the brower to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <!-- Tell the brower to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.5 -->
        <link rel="stylesheet" href="../../Content/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="../../Content/fa/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="../../Content/ionic/ionicons.min.css">
        <!-- Theme style -->
        <link href="~/admin-lte/css/AdminLTE.css" rel="stylesheet" />
        <!-- iCheck -->
        <link rel="stylesheet" href="../../plugins/iCheck/flat/blue.css">
        <!-- Morris chart -->
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body class="hold-transition login-page"> 
        
        <div class="login-box" style="background-color:#fff; border-radius:5px; border:solid; padding:5px; border-width:0px; border-color:#00468C; -webkit-box-shadow: 0px 0px 20px 2px rgba(135,135,135,1); -moz-box-shadow: 0px 0px 20px 2px rgba(135,135,135,1); box-shadow: 0px 0px 20px 2px rgba(135,135,135,1);">

            <!-- /.login-logo Alterar de PainelControle para login quando pronto-->            
 
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new {@class="form-signin"}))
            {
                @Html.AntiForgeryToken()
            <div class="login-box-body">

                <div class="login-logo">

                    <img src="/Content/img/sde_logo.png" />

                </div>



                
                @if (ViewBag.msg_Error != null)
                {
                <div class="alert alert-danger">
                    <p style="text-align:center;">@ViewBag.msg_Error</p>
                    <p style="text-align:center;">@ViewBag.Message</p>
                </div>
                }
                <br />
                <!--<p class="login-box-msg">Para ter acesso informe:</p>-->




                <div class="form-group has-feedback">


                    @Html.TextBoxFor(a => a.Username, new { @type = "text", @class = "form-control", @placeholder = "Usuário" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>





                    <!-- <input type="email" class="form-control" placeholder="E-mail">-->

                </div>
                <div class="form-group has-feedback">

                    @Html.PasswordFor(a => a.Password, new { @type = "password", @class = "form-control", @placeholder = "Senha" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <!--<input type="password" class="form-control" placeholder="Senha">-->


                </div>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="checkbox icheck" style="margin-left:20px;">
                            <label>
                                <input type="checkbox"> Lembrar Senha
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-4 right">
                        <button type="submit" class="btn btn-primary btn-block btn-flat right">Acessar</button>
                    </div>

                    <br /><br /><br /><br />
                    <div style="text-align:center; padding:0; margin:0;" class="col-sm-12">
                        <div class="copyright col-sm-12 small" style="text-align:center; padding:0; margin:0;">
                            ©2015-2020 | <a href="http://sdefic.ddns.net">SDE - Sistema de Diário Eletrônico v. 2.0</a>
                            <br /><br />
                            Escola SENAI de Lençóis Paulista - SP
                        </div>
                        <div class="design col-sm-12 small" style="text-align:center; padding:0; margin:0;">
                            Desenvolvido por: <a target="_blank" href="mailto:vouler@hotmail.com">Carlos Alexandre Cavalheiro</a>
                        </div>
                    </div>
                </div>



               
               
            </div>
                <!-- /.login-box-body -->

                <!-- /.login-box -->
            }
            <!-- /.login-box-body -->
            <!--Rodapé-->

        </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery 3 -->
        <script src="../../bower_components/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="../../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- iCheck -->
        <script src="../../plugins/iCheck/icheck.min.js"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' /* optional */
                });
            });
        </script>
    </body>
</html>



